# Multi-User Bot Environment Configuration
# Copy this file to your project root as .env and configure the values

# Bot Configuration
BOT_NAME="Multi User Bot"
BOT_OWNER="6285157336614"
BOT_PREFIX="!"

# Bot Hosting Settings
BOT_HOSTING_ENABLED=true
BOT_HOSTING_SLOT=10
BOT_HOSTING_SESSION_DIR="sessions"
BOT_HOSTING_SERVER=true
BOT_HOSTING_HOST="0.0.0.0"
BOT_HOSTING_PORT=3001

# Pairing Configuration
PAIRING_NUMBER="6285157336614"
PAIRING_CODE=""
PAIRING_VERSION="[2, 2413, 1]"
PAIRING_BROWSER='["Ubuntu", "Chrome", "20.0.04"]'

# Database Configuration
DATABASE_URL="sqlite:///database.db"
# For MongoDB: DATABASE_URL="mongodb://localhost:27017/botdb"
# For PostgreSQL: DATABASE_URL="postgresql://user:pass@localhost:5432/botdb"

# Security Settings
ENABLE_ANTICALL=true
ENABLE_AUTOREAD=true
ENABLE_ANTIDELETE=false
ENABLE_VERIFICATION=false

# Limits and Cooldowns
USER_LIMIT=50
GAME_LIMIT=25
PREMIUM_LIMIT=1000
COMMAND_COOLDOWN=3
REQUEST_TIMEOUT=60000
RAM_LIMIT="2gb"

# Spam Protection
PERMANENT_THRESHOLD=10
NOTIFY_THRESHOLD=5
BANNED_THRESHOLD=3

# Web Dashboard (Optional)
DOMAIN="https://yourdomain.com"
WEB_DASHBOARD_ENABLED=true

# API Keys (Optional)
GEMINI_API_KEY=""
OPENAI_API_KEY=""

# Notification Settings
NOTIFICATION_EMAIL=""
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

# Development Settings
DEBUG=false
LOG_LEVEL="info"
PROMPT_LANG="en"